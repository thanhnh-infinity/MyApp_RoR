<%= stylesheet_link_tag "bookmarks" %>
<%= stylesheet_link_tag "merriweather" %>
<%= stylesheet_link_tag "domine" %>
<%= stylesheet_link_tag "bootstrap.min" %>

<div class="title">
  <h1>Bookmarks</h1>
  </br>
</div>

<% @books.each do |book|%>
  <div class="book">
      <div class="row">
          <div class="col-md-1">
             <p class="rank-this-week"><%= book.rank_this_week %></p>
          </div>
          <div class="col-md-9">
             <p clas="title"><%= book.title %></p>
             <p clas="author"><%= book.author %></p>
             <p clas="publisher">(<%= book.publisher %>)</p>
             <p clas="description"><%= book.description %></p>
             <%= link_to "See all Editorial Reviews", review_path(book) %>
          </div>
          <div class="col-md-2">
             <p class="weeks-on-list"><%= book.rank_this_week %> weeks on list</p>
          </div>
      </div>
  </div>
<% end %>


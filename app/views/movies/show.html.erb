<%= stylesheet_link_tag "movies" %>

<div class="main movie-show">
  <div class="container">
    <div class="movie">
      
      <!-- Display the movie's info here -->
      <div class="info">
        <%= image_tag @movie.image %>
        <h3 class="movie-title"><%= @movie.title %></h3>
        <p class="movie-release-year"><%= @movie.release_year %></p>
        <p class="movie-plot"><%= @movie.plot %></p>
      </div>
    </div>

    <h2>Cast</h2>
    <!-- Display each actor's info here -->
    <% @actors.each do |actor| %>
        <div class="actor">
          <%= image_tag actor.image %>
          <h3 class="actor-name"><%= actor.first_name %></h3>
          <h3 class="actor-name"><%= actor.last_name %></h3>
          <p class="actor-bio"><%= actor.bio %></p>
          <%= link_to "See all actors", :controller => :actors, :action => :index %>
          <%= link_to "See more", :controller => :actors, :action => :show, :id => actor.id %>
        </div>
    <% end %>    
  </div>
</div>